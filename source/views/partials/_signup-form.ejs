<form action="/users" method="POST">

  <p>Organization Info</p>

  <%- include('partials/_input', {name: 'orgName', label: 'Organization name: '}) %>
  <%- include('partials/_input', {name: 'EIN', label: 'EIN: '}) %>
  <%- include('partials/_input', {name: 'address', label: 'Address: '}) %>
  <%- include('partials/_input', {name: 'website', label: 'Website: '}) %>
  <%- include('partials/_input', {name: 'phone', label: 'Phone number: '}) %>

  <p>Representaive Info</p>

  <div class="input-row">
    <label><span>Full name: </span>
      <input type="text" name="representative.firstName" placeholder="First name">
      <input type="text" name="representative.lastName" placeholder="Last name">
    </label>
  </div>

  <div class="input-row">
    <label><span>Date of birth: </span>
      <input type="text" name="representative.DOB.month" placeholder="Month">
      <input type="text" name="representative.DOB.day" placeholder="Day">
      <input type="text" name="representative.DOB.year" placeholder="Year">
    </label>
  </div>

  <%- include('partials/_input', {name: 'representative.SSN', label: 'SSN (last four digits): '}) %>

  <p>Login Info</p>

  <div class="input-row">
    <input type="text" placeholder="Enter your email" name="email">
  </div>

  <div class="input-row">
    <input type="password" placeholder="Enter your password" name="password">
  </div>

  <div class="input-row">
    <input type="password" placeholder="Verify your password" name="passwordVerify">
  </div>

  <div class="input-row">
    <input type="submit" value="Sign Up">
  </div>
</form>